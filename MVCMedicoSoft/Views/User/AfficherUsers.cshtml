@model IEnumerable<DAL.Utilisateur>

@{
    ViewBag.Title = "EditUser";
}

<h2>Liste des utilisateurs</h2>
@if (MVCMedicoSoft.Models.MySession.isMedecin)
{
    <a href="/User/AfficherPatient" class="btn btn-danger">
        Vos patients
    </a>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdUtilisateur)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.IsActif)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUtilisateur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActif)
            </td>
            <td>
              
                @Html.ActionLink("Edit", "EditUser", new { id = item.NumRegNational }) |
                @Html.ActionLink("Details", "DetailsUser", new { id = item.IdUtilisateur}) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdUtilisateur })
            </td>
        </tr>
    }

</table>
